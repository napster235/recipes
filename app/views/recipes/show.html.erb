<div class="container">
  <div class="d-flex my-5">
    <%= image_tag(@recipe.image, alt: @recipe.title, class: "img-thumbnail bg-secondary border-0", style: "width: 500px; height:500px; ") %>
    <div class="mx-5 d-flex  flex-column mb-4">
        <h3 class="text-warning text-center"><%= @recipe.title %> </h3>
        <div class="text-white d-flex">
          <div class="fw-bold mx-1">Cook time:</div>
          <div><%= @recipe.cook_time %> min</div>
        </div>
        <div class="text-white d-flex">
          <div class="fw-bold mx-1">Prep time:</div>
          <div> <%= @recipe.prep_time %> min. </div>
        </div>
        <div class="text-white d-flex">
          <div class="fw-bold mx-1">Cuisine:</div>
          <div> <%= @recipe.cuisine.nil? ? @recipe.cuisine :  "Unknown" %></div>
        </div>
      <div class="text-white d-flex">
        <div class="fw-bold mx-1">Author:</div>
        <div> <%= @recipe.author %></div>
      </div>
      <div class="text-white">
        <div class="fw-bold mt-2 mx-1">Ingredients:</div>
        <ul class="list-group mt-0 px-4">
          <% @recipe.ingredients.each do |ingredient| %>
            <li class="">
              <%= ingredient %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    </div>
</div>
